{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run",
            "type": "shell",
            "command": "g++ ${fileBasename} -o a.exe; if ($?) { Get-Content ../input.txt | ./a.exe | Tee-Object ../output.txt; echo '=== OUTPUT ==='; Get-Content ../output.txt }",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}