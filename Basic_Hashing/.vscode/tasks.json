{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ with input/output (PowerShell)",
      "type": "shell",
      "command": "g++ '${file}' -o '${fileDirname}\\a.exe'; if ($?) { Get-Content '${fileDirname}\\input.txt' | .\\a.exe | Set-Content '${fileDirname}\\output.txt' }",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
